<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<GridPane hgap="5.0" maxHeight="Infinity" maxWidth="Infinity" vgap="5.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.cuny.brooklyn.cisc3120.project.game.controller.GameController">
   <rowConstraints>
      <RowConstraints minHeight="10.0" />
      <RowConstraints minHeight="10.0" prefHeight="300.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="300.0" />
      <RowConstraints minHeight="10.0" prefHeight="45.0" />
   </rowConstraints>
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" prefWidth="200.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" prefWidth="200.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" prefWidth="200.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" prefWidth="200.0" />
      <ColumnConstraints minWidth="150.0" />
   </columnConstraints>
   <children>
      <StackPane maxHeight="Infinity" maxWidth="Infinity" style="-fx-background-color: white;" GridPane.columnSpan="4" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.rowSpan="2" GridPane.vgrow="ALWAYS">
         <children>
            <Canvas fx:id="targetCanvas" height="600.0" width="800.0" />
         </children></StackPane>
      <MenuBar GridPane.columnSpan="4" GridPane.hgrow="ALWAYS">
        <menus>
          <Menu mnemonicParsing="false" text="%menuItemFile">
            <items>
              <MenuItem accelerator="Alt+Shift+N" mnemonicParsing="false" onAction="#newGame" text="%menuItemFileNewGame" />
              <MenuItem accelerator="Alt+Shift+O" mnemonicParsing="false" onAction="#openGame" text="%menuItemFileOpenGame" />
              <SeparatorMenuItem />
              <MenuItem accelerator="Alt+Shift+S" mnemonicParsing="false" onAction="#saveTheGame" text="%menuItemFileSaveGame" />
              <SeparatorMenuItem />
              <MenuItem mnemonicParsing="false" onAction="#exitGame" text="%menuItemFileExit" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="%menuItemHelp">
            <items>
              <MenuItem mnemonicParsing="false" text="%menuItemHelpAbout" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <TextField alignment="CENTER_RIGHT" onAction="#fireTheWeapon" promptText="Guess X" text="0" GridPane.columnIndex="1" GridPane.rowIndex="3" fx:id="xAimedAtTextField" />
      <TextField fx:id="yAimedAtTextField" alignment="CENTER_RIGHT" onAction="#fireTheWeapon" promptText="Guess Y" text="0" GridPane.columnIndex="2" GridPane.rowIndex="3" />
      <Button fx:id="fireWeaponButton" mnemonicParsing="false" onAction="#fireTheWeapon" text="Shoot!" GridPane.columnIndex="3" GridPane.rowIndex="3" />
      <ComboBox fx:id="lcComboBox" maxWidth="Infinity" prefWidth="150.0" GridPane.columnIndex="4" />
      <TableView fx:id="gameStatTableView" maxWidth="Infinity" GridPane.columnIndex="4" GridPane.hgrow="SOMETIMES" GridPane.rowIndex="1" GridPane.vgrow="ALWAYS">
        <columns>
          <TableColumn fx:id="tableViewStatName" editable="false" maxWidth="Infinity" minWidth="200.0" prefWidth="-1.0" text="%statName" />
          <TableColumn fx:id="tableViewStatValue" editable="false" maxWidth="75.0" minWidth="75.0" prefWidth="75.0" text="%statValue" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <VBox fx:id="playersOnLineVbox" prefHeight="200.0" prefWidth="100.0" spacing="5.0" GridPane.columnIndex="4" GridPane.rowIndex="2">
         <children>
            <Label alignment="CENTER" maxWidth="Infinity" text="%playersOnLine" textAlignment="CENTER">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <ListView maxHeight="Infinity" prefWidth="200.0" />
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="5.0" />
   </padding>
</GridPane>
